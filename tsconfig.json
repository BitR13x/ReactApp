{
   "compilerOptions": {
      "target": "es6",
      "module": "CommonJS",
      "jsx": "react",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "allowJs": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "typeRoots": [
         "node_modules/@types",
         "node_modules/web-ext-types"
       ]
   },
   "include": ["./api/src/**/*"],
   "exclude": ["node_modules"]
}
